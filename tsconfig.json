{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "build",
    "sourceMap": true,
    "noImplicitAny": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["./src/**/*", "./index.d.ts", "src/types.ts"],
  "ts-node": {
    "esm": true,
    "files": true
  }
}
