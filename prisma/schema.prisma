generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}
enum TweetType {
  FETCHED
  GENERATED
}
enum TweetAccountStatus {
  ACTIVE
  PAUSED
  ARCHIVED
}

enum EngagementType {
  AGREEABLENESS_AGREE
  AGREEABLENESS_DISAGREE
  AUTHORITY
  EMPATHY
  SOLUTION
  HUMOR
  QUESTION
  CONTRARIAN
  TREND
  WHAT_IF
  AI_RECOMMENDED 
}

model User {
  id                          String    @id @default(uuid())
  name                        String?
  email                       String    @unique
  username                    String    @unique
  emailVerified               DateTime?
  image                       String?
  password                    String?
  role                        UserRole  @default(USER)
  accounts                    Account[]
  isTwoFactorEnabled          Boolean   @default(false)
  twoFactorConfirmation       TwoFactorConfirmation?

  timezone                    String            @default("UTC")  
  hasConfiguredTimezone       Boolean           @default(false)
  twitterAccounts             TwitterAccount[]
  lastLogin                   DateTime?
  createdAt                   DateTime  @default(now())
  updatedAt                   DateTime  @updatedAt
  deletedAt                   DateTime?
}


model Account {
  id                 String  @id @default(uuid())
  userId             String  
  type               String
  provider           String
  name               String?
  avatar             String?

  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}
 
model PainPoint {
  id                String    @id @default(uuid())
  name              String
  description       String    @db.Text
  imageUrl          String?
  keywords          String[]
  siteKeywords      String?

  twitterAccountId  String    @unique
  twitterAccount    TwitterAccount @relation(fields: [twitterAccountId], references: [id], onDelete: Cascade)

  siteSummary       String?
  title             String?
  metaDescription   String?
  headings          String?

  businessType      String?  
  businessRole      String?   
  brandingKeywords String[]   

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}


model TwitterAccount {
  id                  String    @id @default(uuid())
  userId              String
  oauth2TokenId       String
  username            String?      
  tweetLimit          Int?        // API rate limits
  twitterUserId       String

  isActive            Boolean    @default(false)
  status              TweetAccountStatus @default(ACTIVE)
  accessToken         String?    @db.Text
  refreshToken        String?    @db.Text
  expiresIn           Int?
  tokenType           String?
  profileImageUrl     String?   
  providerAccountId   String?
  accountName         String?

  analyticsFrequency  String?      // E.g., "daily", "hourly" for fetching engagement analytics
  metrics             Json?        // Twitter-specific metrics
  followerCount       Int?

  tweets              Tweet[]
  oauth2Token         OAuth2Token  []

  user                User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  painPoint           PainPoint?
  mentions            Mention[]
  quoteTweets         QuoteTweet[]
  accountAnalyticData AccountAnalyticData?
  directMessages      DirectMessage[]
  followers           Follower[]
  followerHistories   FollowerHistory[]
  engagements         Engagement[]
  KeywordNotFound     KeywordNotFound[]

  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@index([username])
  @@unique([userId, providerAccountId])
}

model OAuth2Token {
  id               String  @id @default(uuid())
  userId           String
  provider         String  

  codeVerifier     String? @db.Text
  state            String? @db.Text
  accessToken      String? @db.Text
  refreshToken     String? @db.Text
  expiresAt        Int?
  tokenType        String? // E.g., "Bearer"

  twitterAccountId String ?
  twitterAccount   TwitterAccount? @relation(fields: [twitterAccountId], references: [id])

  createdAt        DateTime @default(now())
  updatedAt        DateTime @default(now())

  @@unique([userId, provider]) 
  @@unique([state])

}


model VerificationToken {
  id String         @id @default(uuid())
  email String
  token String      @unique
  expires DateTime

  @@unique([email, token])
}

model PasswordResetToken {
  id String       @id @default(uuid())
  email String
  token String    @unique
  expires DateTime

  @@unique([email, token])
}

model TwoFactorToken {
  id String @id @default(uuid())
  email String
  token String @unique
  expires DateTime

  @@unique([email, token])
}

model TwoFactorConfirmation {
  id String @id @default(uuid())

  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId])
}
 
model Tweet {
  id                    String    @id @default(uuid())
  tweetId               String    @unique
  text                  String
  authorId              String?
  authorName            String?
  authorUsername        String?
  authorProfileImageUrl String?
  isRetweet             Boolean  @default(false)
  referencedTweetId     String?
  hasEngageWith         Boolean  @default(false)

  likeCount             Int
  retweetCount          Int
  replyCount            Int
  quoteCount            Int
  impressionCount       Int
  relevanceScore        Float?

  timestamp            String
  media                Media[]
  embedding            TweetEmbedding?

  keyword              String?

  tweetType                     TweetType @default(FETCHED)
  generatedTweetResponses       GeneratedTweetResponse[]

  twitterAccountId           String
  twitterAccount             TwitterAccount   @relation(fields: [twitterAccountId], references: [id], onDelete: Cascade)
  accountAnalyticDataId      String?
 
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  @@index([tweetId])
}

model TweetEmbedding {
  tweetId   String  @id
  embedding Json

  tweet     Tweet   @relation(fields: [tweetId], references: [id])
}

enum MediaType {
  IMAGE
  VIDEO
  GIF
  OTHER
}

model Media {
  id               String     @id @default(uuid())
  mediaKey         String     @unique
  type             MediaType
  url              String?
  previewImageUrl  String?
  height           Int?
  width            Int?
  tweetId          String
  tweet            Tweet      @relation(fields: [tweetId], references: [id], onDelete: Cascade)

  duration         Int?
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
}

model GeneratedTweetResponse {
  id             String    @id @default(uuid())
  tweetId        String
  response       String
  engagementType EngagementType?
  responseType   String?
  isPrepared     Boolean   @default(false)
  createdAt      DateTime  @default(now())
  tweet          Tweet     @relation(fields: [tweetId], references: [id], onDelete: Cascade)

  @@index([tweetId])
}



model Mention {
  id               String   @id @default(cuid())
  mentionId        String   @unique
  mentionText      String
  tweetId          String   @unique
  twitterAccountId String

  authorId              String?
  authorName            String?
  authorUsername        String?
  authorProfileImageUrl String?

  twitterAccount   TwitterAccount @relation(fields: [twitterAccountId], references: [id], onDelete: Cascade)
  metadata         Json?
  seen             Boolean  @default(false)
  createdAt        DateTime @default(now())
}

model DirectMessage {
  id               String      @id @default(uuid())
  twitterAccountId String
  
  messageId        String   @unique
  senderId         String
  recipientId      String

  text             String
  authorId         String
  authorName       String
  authorUsername   String
  authorProfileImageUrl String
  
  createdAt        DateTime @default(now())

  twitterAccount   TwitterAccount @relation(fields: [twitterAccountId], references: [id], onDelete: Cascade)
}
model QuoteTweet {

  id                    String      @id @default(uuid())
  quoteId               String      @unique
  tweetId               String
  quoteText             String
  twitterAccountId      String
  twitterAccount        TwitterAccount @relation(fields: [twitterAccountId], references: [id])
  authorId              String
  authorUsername        String
  authorName            String
  authorProfileImageUrl String

}

model Follower {
  id                String      @id @default(uuid())
  twitterAccountId  String
  twitterAccount    TwitterAccount @relation(fields: [twitterAccountId], references: [id], onDelete: Cascade)
  followerId        String   
  username          String
  followedAt        DateTime @default(now()) 
  createdAt         DateTime @default(now())
  @@index([twitterAccountId])
}

model AccountAnalyticData {
  id                     String    @id @default(uuid())
  twitterAccountId       String    @unique

  totalFollowers         Int?
  followerGrowth         Int?  
  followerGrowthChange   Float?  
  totalEngagements       Int?
  totalEngagementsChange Int?      

  viralTweets            Int?
  lastUpdated            DateTime?  

  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt

  twitterAccount         TwitterAccount @relation(fields: [twitterAccountId], references: [id], onDelete: Cascade)
}


model FollowerHistory {
  id                String          @id @default(uuid())
  twitterAccountId  String         
  twitterAccount    TwitterAccount  @relation(fields: [twitterAccountId], references: [id], onDelete: Cascade)
  followersCount    Int
  recordedAt        DateTime        @default(now())

  @@index([twitterAccountId, recordedAt])
}

model Engagement {
  id                String   @id @default(uuid())
  twitterAccountId  String
  tweetId           String    
  engagementDate    DateTime  @default(now()) 
  likeCount         Int       @default(0)
  retweetCount      Int       @default(0)
  replyCount        Int       @default(0)
  totalEngagement   Int       @default(0)

  twitterAccount    TwitterAccount @relation(fields: [twitterAccountId], references: [id], onDelete: Cascade)
  createdAt         DateTime @default(now())

  @@index([twitterAccountId])
  @@index([tweetId])
}


model KeywordNotFound {
  id                  String   @id @default(uuid())
  twitterAccountId    String   
  keyword             String   
  createdAt           DateTime @default(now())
  twitterAccount      TwitterAccount     @relation(fields: [twitterAccountId], references: [id], onDelete: Cascade)

  @@index([twitterAccountId, keyword])

  }
